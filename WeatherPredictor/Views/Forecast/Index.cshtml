@{
    ViewData["Title"] = "Прогноз погоди";
}

<h2>Прогноз погоди</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label>Місто:</label>
        <input type="text" name="city" class="form-control" value="@ViewBag.City" required />
    </div>
    <div class="form-group mt-2">
        <label>Дата:</label>
        <input type="date" name="date" class="form-control" value="@(ViewBag.Date ?? DateTime.Now.ToString("yyyy-MM-dd"))" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Отримати прогноз</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}

@if (ViewBag.ApiForecast != null)
{
    <div class="mt-4">
        <h4>Прогноз для @ViewBag.City (@ViewBag.Date)</h4>
        <p><b>API:</b> @ViewBag.ApiForecast °C</p>
        <p><b>ML модель:</b> @ViewBag.MlForecast</p>
    </div>
}

<hr />

<a class="btn btn-secondary mt-3" asp-action="History">Переглянути історію прогнозів</a>
